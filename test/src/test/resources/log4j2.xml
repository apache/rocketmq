<Configuration>
    <Appenders>
        <Console name="CONSOLE">
            <PatternLayout pattern="%d %p [%F %M %L]: %m%n"/>
            <Filters>
                <LevelRangeFilter minLevel="TRACE" maxLevel="ERROR"/>
            </Filters>
        </Console>
        <RollingFile name="TOTAL" append="false" fileName="target/it_test.log"
                     filePattern="target/it_test.log.gz">
            <PatternLayout pattern="%d - %c -%-4r [%t] %-5p %x - %m%n"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="10.24 MB" />
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="off">
            <AppenderRef ref="TOTAL"/>
        </Root>
    </Loggers>
</Configuration>